<div class="center jumbotron">

	<h1>Flickr Widget</h1>
	<p>Enter a <a href="https://www.pixsy.com/academy/flickr-id/">user's Flickr ID to see their photostream.</a></p>

	<%= form_tag('/', method: :get) do %>
  <%= label_tag 'Enter ID here (try 186518659@N08):   ' %>
  <%= text_field_tag :user_id %>
	<br>
	<br>
  <%= submit_tag 'Search', class: "btn btn-lg btn-primary" %>
<% end %>


</div>



<% if !params[:user_id].blank? %>


	<h1><%= @user_id.username %> 's Photos </h1>



		<% @photos.each do |photo| %>
			<% info = flickr.photos.getInfo(:photo_id => photo.id) %>
			<%= link_to image_tag(FlickRaw.url_m(info)), FlickRaw.url_b(info) %>
		<% end  %>



<% end %>
